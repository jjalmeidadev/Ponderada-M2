<!-- Página de perfil do usuário -->
<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <title>Perfil</title>
    <link rel="stylesheet" href="/styles/main.css">
    <style>
        html,
        body {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
        }

        body {
            height: 100vh;
        }
    </style>
</head>

<body>
    <%- include('../components/header-dashboard.ejs', { page: 'profile' }) %>
        <!-- Conteúdo principal do perfil -->
        <div class="main-content-wrapper">
            <!-- Seção da esquerda com dados e inscrições -->
            <div class="left-section">
                <div class="email-container">
                    <div class="form-label-email">E-mail:</div>
                    <input type="email" class="email-input" placeholder="Preencher...">
                </div>
                <div class="document-container">
                    <div class="form-label-doc">Documento:</div>
                    <input type="text" class="document-input" placeholder="Preencher...">
                </div>
                <div class="inscricoes-container">
                    <div class="form-label-inscricoes">Inscrições:</div>
                    <div class="events-scroll-container">
                        <% let events=(typeof subscribedEvents !=='undefined' ) ? subscribedEvents : []; %>
                            <% if (events.length> 0) { %>
                                <% events.forEach(function(event) { %>
                                    <div class="event-card">
                                        <div class="event-title">
                                            <%= event.title %>
                                        </div>
                                        <% if (event.subtitle) { %>
                                            <div class="event-subtitle">
                                                <%= event.subtitle %>
                                            </div>
                                            <% } %>
                                                <% if (event.description) { %>
                                                    <div class="event-description">
                                                        <%= event.description %>
                                                    </div>
                                                    <% } %>
                                    </div>
                                    <% }); %>
                                        <% } else { %>
                                            <div>Nenhuma inscrição encontrada.</div>
                                            <% } %>
                    </div>
                </div>
            </div>
            <!-- Seção da direita com imagem e nome do perfil -->
            <div class="right-section">
                <div class="profile-circle-bg"></div>
                <div class="profile-circle"></div>
                <img src="/assets/perfilimg.png" alt="Perfil" class="profile-image">
                <div class="profile-name-container">
                    <div class="profile-name">Rogério Dias</div>
                </div>
            </div>
        </div>
        <%- include('../components/footer') %>
</body>

</html>