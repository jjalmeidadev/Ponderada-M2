<!DOCTYPE html>
<html lang="pt-br">

<head>
    <meta charset="UTF-8">
    <title>Dashboard</title>
    <link rel="stylesheet" href="/styles/main.css">
    <style>
        html,
        body {
            margin: 0;
            padding: 0;
            height: 100%;
            overflow: hidden;
        }

        body {
            height: 100vh;
            overflow-y: auto;
        }

        html::-webkit-scrollbar,
        body::-webkit-scrollbar {
            display: none;
        }

        .evento-destaque {
            margin-top: 48px;
            margin-left: 90px;
        }
    </style>
</head>

<body>
    <%- include('../components/header-dashboard') %>
        <!-- Evento em destaque (first event) -->
        <% if (events && events.length> 0) { %>
            <div class="evento-destaque">
                <div class="conteudo-destaque">
                    <h1 class="titulo-destaque">
                        <%= events[0].title %>
                    </h1>
                    <h2 class="subtitulo-destaque">
                        <%= events[0].subtitle %>
                    </h2>
                    <div class="data-destaque">
                        <%= events[0].date %>
                    </div>
                    <div class="local-destaque">
                        <%= events[0].organization ? events[0].organization.name : (events[0].organization_name || '' )
                            %>
                    </div>
                    <p class="descricao-destaque">
                        <%= events[0].description %>
                    </p>
                    <a href="#" class="botao-destaque">Inscrever-se</a>
                </div>
                <img src="<%= events[0].image_path %>" alt="<%= events[0].title %>" class="imagem-destaque">
            </div>
            <% } %>
                <!-- Grade de eventos (remaining events) -->
                <div class="grade-eventos">
                    <% if (events && events.length> 1) {
                        for (let i = 1; i < events.length; i++) { const event=events[i]; %>
                            <div class="cartao-evento">
                                <img src="<%= event.image_path %>" alt="<%= event.title %>" class="imagem-evento">
                                <div class="conteudo-evento">
                                    <h3 class="titulo-evento">
                                        <%= event.title %>
                                    </h3>
                                    <h4 class="subtitulo-evento">
                                        <%= event.subtitle %>
                                    </h4>
                                    <p class="descricao-evento">
                                        <%= event.description %>
                                    </p>
                                    <div class="rodape-evento">
                                        <div>
                                            <div class="data-evento">
                                                <%= event.date %>
                                            </div>
                                            <div class="local-evento">
                                                <%= event.organization ? event.organization.name :
                                                    (event.organization_name || '' ) %>
                                            </div>
                                        </div>
                                        <a href="#" class="botao-evento">Inscrever-se</a>
                                    </div>
                                </div>
                            </div>
                            <% } } %>
                </div>
                <div class="indicador-rolagem"></div>
                <%- include('../components/footer') %>
                    <script>
                        function atualizarIndicadorRolagem() {
                            const indicador = document.querySelector('.indicador-rolagem');
                            const scrollContainer = document.body;
                            const alturaScroll = scrollContainer.scrollHeight - scrollContainer.clientHeight;
                            const scrollTop = scrollContainer.scrollTop;
                            const alturaIndicador = Math.max((scrollContainer.clientHeight / scrollContainer.scrollHeight) * scrollContainer.clientHeight, 40);
                            const topoIndicador = (scrollTop / alturaScroll) * (scrollContainer.clientHeight - alturaIndicador);

                            indicador.style.height = alturaIndicador + 'px';
                            indicador.style.top = topoIndicador + 'px';
                        }

                        document.body.addEventListener('scroll', atualizarIndicadorRolagem);
                        window.addEventListener('resize', atualizarIndicadorRolagem);
                        document.addEventListener('DOMContentLoaded', atualizarIndicadorRolagem);
                    </script>
</body>

</html>