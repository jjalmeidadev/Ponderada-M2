        <script>
            function atualizarIndicadorRolagem() {
                const indicador = document.querySelector('.indicador-rolagem');
                const alturaScroll = document.documentElement.scrollHeight - window.innerHeight;
                const scrollTop = window.scrollY || window.pageYOffset;
                const alturaIndicador = Math.max((window.innerHeight / document.documentElement.scrollHeight) * window.innerHeight, 40);
                const topoIndicador = (scrollTop / alturaScroll) * (window.innerHeight - alturaIndicador);

                indicador.style.height = alturaIndicador + 'px';
                indicador.style.top = topoIndicador + 'px';
            }

            window.addEventListener('scroll', atualizarIndicadorRolagem);
            window.addEventListener('resize', atualizarIndicadorRolagem);
            document.addEventListener('DOMContentLoaded', atualizarIndicadorRolagem);
        </script>